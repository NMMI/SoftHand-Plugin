<?xml version="1.0" encoding="UTF-8"?>
<launch>

	<arg name="use_rviz" default="true"/>
	<arg name="device_name" value="right_hand"/>
	<arg name="robot_name" value="qbhand_copy"/>
	<arg name="robot_package" value="softhands"/>
	<arg name="model" default="$(find softhands_description)/urdf/qbhand_copy.urdf.xacro"/>
	<arg name="x" default="0"/>
	<arg name="y" default="0"/>
	<arg name="z" default="0"/>

	<!-- load the URDF model into the ROS Parameter Server -->
	<param name="robot_description" command="$(eval 'xacro ' + find(robot_package + '_description') + '/urdf/' + robot_name + '.urdf.xacro namespace:=' + device_name)"/>

	<!-- start gazebo server with empty world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find softhands_description)/worlds/empty.world"/>
		<arg name="paused" value="true"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="gui" value="true"/>
		<arg name="headless" value="false"/>
		<arg name="verbose" value="false"/>
		<arg name="debug" value="false"/>
	</include>

	<!-- spwan the hand in gazebo -->
	<node name="my_robot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model $(arg model) -x $(arg x) -y $(arg y) -z $(arg z) -unpause"/>

	<!-- get joint states and publish  TFs -->
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" respawn="true">
		<rosparam param="source_list">[/right_hand_v1/index_state, /right_hand_v1/little_state, /right_hand_v1/middle_state, /right_hand_v1/ring_state, /right_hand_v1/thumb_state]</rosparam>
		<param name="use_gui" value="true"/>
		<param name="rate" value="200"/>
	</node>
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true">
		<!-- <remap from="/joint_states" to="/softhands/joint_states" />  -->
		<param name="publish_frequency" value="200" />
		<param name="rate" value="200"/>
	</node>

	<group if="$(arg use_rviz)">
		<node name="rviz" pkg="rviz" type="rviz" respawn="false" output="log" args="$(eval '-d ' + find('qb_hand_description') + '/rviz/qbhand.rviz')"/>
	</group>

</launch>




